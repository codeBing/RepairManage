@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">查找序列号</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                    <div class="col-lg-12">
                    <div id="homeForm">
                        <form  action="/RepairDetail/Search/" method="get">
                            <div class="form-group form-inline ">
                            <div class="form-input">
                                   <input class="form-control" id="searchNum" name="id" data-val="true" data-val-number="序列号必须是一个数字。" data-val-required="请输入序列号" placeholder="输入序列号">
                                   <button type="submit" class="btn btn-outline btn-primary btn-md">搜索</button> 
                             </div>
                             <div>
                             <span class="field-validation-valid" data-valmsg-for="id" data-valmsg-replace="true"></span>
                             </div>
                                    <p class="help-block">请在上方输入要查找的电脑序列号</p>
                            </div>
                           
                         </form>
                    </div>
                    </div>
                </div>
                <!-- /.row -->
</div>
