@model RepairManage.Models.Administrator

@{
    Layout = null;
}

<!DOCTYPE html>

<head>

    <meta charset="gb2312">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>维修中心后台管理系统</title>
    <link href="@Url.Content("~/Content/themes/Bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- MetisMenu CSS -->
    <link href="@Url.Content("~/Content/themes/Bootstrap/css/metisMenu.min.css")" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/themes/Bootstrap/css/sb-admin-2.css")" rel="stylesheet" type="text/css" />

    <!-- Custom Fonts -->
    <link href="@Url.Content("~/Content/themes/Bootstrap/css/font-awesome.min.css")"  rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>  
    <script src="@Url.Content("~/Scripts/metisMenu.min.js")" type="text/javascript"></script>  
    <script src="@Url.Content("~/Scripts/sb-admin-2.js")" type="text/javascript"></script>  
</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">管理员登录</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="/admin/logon" method="post">
                            @Html.ValidationSummary(true)
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" id="adminName" name="adminName" placeholder="用户名" type="text" autofocus>
                                    @Html.ValidationMessageFor(model => model.adminName)
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="密码" id="adminPwd" name="adminPwd" type="password" value="">
                                    @Html.ValidationMessageFor(model => model.adminPwd)
                                </div>
                                <p>
                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="登录" />
                                </p>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>
