@{
    Layout = "~/Views/Shared/_FrontLayout.cshtml";
}
@model IEnumerable<RepairManage.Models.Computer>

@{
    ViewBag.Title = "首页";
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div >
           <p>
                欢迎使用Acer电脑维修查询系统<br>
                请在下方输入框输入您电脑的序列号以查询您电脑所属的特约维修中心：        		
          </p>
          </div>
          <div class="subscribe">
			<form class="form-inline" action="/computer/browser/" method="get">
			    <input type="text" required="required" data-val="true" data-val-number="序列号必须是一个数字。" data-val-required="请输入序列号" name="id" placeholder="请输入您电脑的序列号">
                <button type="submit" class="btn">查询</button>
                <div>
                <span class="field-validation-valid" data-valmsg-for="id" data-valmsg-replace="true"></span>
                </div>
			</form>
</div>