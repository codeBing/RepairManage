                    </a>
                    <ul class="dropdown-menu dropdown-user">
                        <li><a href="/admin/logoff"><i class="fa fa-sign-out fa-fw"></i> Logout</a>
                        </li>
                    </ul>
                    <!-- /.dropdown-user -->
                </li>
                <!-- /.dropdown -->
            </ul>
