@model RepairManage.Models.Computer

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">电脑信息</h1>
                    </div>
                    <!-- /.col-lg-12 -->
                    <div class="col-lg-12">
                    <div id="searchForm">
@if (ViewBag.isExist==1)
{
    <dl class="dl-horizontal">
    <dt>电脑序列号</dt>
    <dd>
        @Html.DisplayFor(model => model.computerId)
    </dd>
    <dt>所属维修中心</dt>
    <dd>
        @Html.DisplayFor(model => model.center.name)
    </dd>
    <dt>维修中心地址</dt>
    <dd>
        @Html.DisplayFor(model => model.center.address)
    </dd>
    <dt>维修中心电话</dt>
    <dd>
        @Html.DisplayFor(model => model.center.phone)
    </dd>
    <dt>维修中心邮箱</dt>
    <dd>
        @Html.DisplayFor(model => model.center.email)
    </dd>
    <dt>保修截止日期</dt>
    <dd>
        @Html.DisplayFor(model => model.deadTime)
    </dd>
    <dt>是否在保修期</dt>
    <dd>
        @if (Model.deadTime > DateTime.Now)
        {
            <text>是</text>
        }
        else
        {
            <text>否</text>
        }
    </dd>
    </dl>
}
else
{
    <p>找不到此序列号！</p>
}
</div>
                    </div>
                    </div>
                </div>