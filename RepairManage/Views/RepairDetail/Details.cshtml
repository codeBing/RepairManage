@model RepairManage.Models.RepairDetail

@{
    ViewBag.Title = "维修单详情";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                维修单详情</h1>
        </div>
       <dl class="dl-horizontal">
    <dt>维修单号</dt>
    <dd>
        @Html.DisplayFor(model => model.repairId)
    </dd>
    <dt>电脑序列号</dt>
    <dd>
        @Html.DisplayFor(model => model.computerId)
    </dd>
    <dt>故障信息</dt>
    <dd>
        @Html.DisplayFor(model => model.faultMsg)
    </dd>
    <dt>维修方式</dt>
    <dd>
        @Html.DisplayFor(model => model.repairMethod)
    </dd>
    <dt>维修费用</dt>
    <dd>
        @Html.DisplayFor(model => model.repairCost)
    </dd>
    <dt>维修日期</dt>
    <dd>
        @Html.DisplayFor(model => model.repairTime)
    </dd>
    <dt>维修状态</dt>
    <dd>
        @if (Model.isFixed)
            {
                <text>已完成</text>
            }
            else
            {
                <text>维修中</text>
            }
    </dd>
    <dt>客户姓名</dt>
    <dd>
        @Html.DisplayFor(model => model.customerName)
    </dd>
    <dt>客户电话号码</dt>
    <dd>
        @Html.DisplayFor(model => model.phoneNumber)
    </dd>
    <dt>客户邮箱</dt>
    <dd>
        @Html.DisplayFor(model => model.email)
    </dd>
    </dl>
    </div>
</div>
