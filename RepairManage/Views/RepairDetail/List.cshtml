@model IEnumerable<RepairManage.Models.RepairDetail>
@{
    ViewBag.Title = "维修单列表";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<!-- DataTables CSS -->
<link href="@Url.Content("~/Content/themes/Bootstrap/css/dataTables.bootstrap.css")" rel="stylesheet" type="text/css" />
@*<script src="@Url.Content("~/Scripts/jquery.dataTables.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/dataTables.bootstrap.js")" type="text/javascript"></script>*@
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                维修单列表</h1>
        </div>
        <!-- /.col-lg-12 -->
        <div class="col-lg-12">
            <div class="table-responsive">
                <table class="table  table-hover" id="myTable">
                    <thead>
                        <tr>
                            <th>
                                维修单号
                            </th>
                            <th>
                                电脑序列号
                            </th>
                            <th>
                                客户名称
                            </th>
                            <th>
                                维修日期
                            </th>
                            <th>
                                维修状态
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.repairId)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.computerId)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.customerName)
                                </td>
                                <td>@Html.DisplayFor(modelItem => item.repairTime)
                                </td>
                                <td>
                                    @if (item.isFixed)
                                    {
                                        <text>已完成</text>
                                    }
                                    else
                                    {
                                        <text>维修中</text>
                                    }
                                </td>
                                <td>@Html.ActionLink("详情", "Details", new { id = item.repairId })
                                </td>
                                <td>
                                    @if (item.isFixed == true)
                                    {
                                        <text>编辑</text>
                                    }
                                    else
                                    {
                                        @Html.ActionLink("编辑", "Edit", new { id = item.repairId })
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
